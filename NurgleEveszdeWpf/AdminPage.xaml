<Window x:Class="NurgleEveszdeWpf.AdminPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NurgleEveszdeWpf"
        mc:Ignorable="d"
        Title="AdminPage" Height="1080" Width="1920" ResizeMode="NoResize" WindowState="Maximized">
    <Grid Background="#525252">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>  
        
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Background="#414141" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label Content="Nurgle Evészde - Admin" 
                       FontSize="40" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Center" 
                       Foreground="#6EC207"/>
            </StackPanel>
        </Border>
        
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Grid.Column="0" Grid.Row="1" Margin="10">
            <DataGrid x:Name="dgAlapanyagok" 
                      Background="#414141" 
                      Foreground="#6EC207" 
                      RowBackground="#3A3A3A" 
                      AlternatingRowBackground="#525252" 
                      HorizontalGridLinesBrush="Black" 
                      VerticalGridLinesBrush="Black" 
                      BorderBrush="Black" 
                      BorderThickness="2" 
                      AutoGenerateColumns="True" />
        </Border>
        
        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#525252" Width="auto" Height="auto">
            <Button Style="{DynamicResource ButtonStyleLogIn}" Width="150" Height="40" FontSize="16" Content="Hozzáadás" Margin="10"/>
            <Button Style="{DynamicResource ButtonStyleLogIn}" Width="150" Height="40" FontSize="16" Content="Módosítás" Margin="10"/>
            <Button Style="{DynamicResource ButtonStyleLogIn}" Width="150" Height="40" FontSize="16" Content="Törlés" Margin="10"/>
            <Button Style="{DynamicResource ButtonStyleLogIn}" Width="150" Height="40" FontSize="16" Content="Kijelentkezés" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
